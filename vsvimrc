set nocompatible
set modelines=0
set clipboard=unnamed

set shiftwidth=4
set softtabstop=4
set expandtab

set encoding=utf-8
set scrolloff=3
set autoindent
set showmode
set showcmd
set hidden
set wildmenu
set wildmode=list:longest
set visualbell
set cursorline
set ttyfast
set ruler
set backspace=indent,eol,start
set laststatus=2
set relativenumber

let mapleader = ","
nnoremap / /\v
vnoremap / /\v
set ignorecase
set smartcase
set incsearch
set hlsearch

set wrap
set formatoptions=qrn1
set colorcolumn=85

inoremap jj <ESC>

nmap <C-O> :vsc View.NavigateBackward<CR>
nmap <C-I> :vsc View.NavigateForward<CR>
nmap <leader>d :vsc Edit.GoToDefinition<CR>
nmap <leader>n :vsc Tools.ExternalCommand3<CR>
nmap <leader>p :vsc Tools.ExternalCommand4<CR>

nmap <leader>a :vsc ReSharper.ReSharper_UnitTestRunSolution<CR>
nmap <leader>ts :vsc ReSharper.ReSharper_UnitTestRunFromContext<CR>
nmap <leader>r :vsc ReSharper.ReSharper_RefactorThis<CR>
nmap <leader>c :vsc ReSharper_AltEnter<CR>
nmap <leader>m :vsc Edit.ToggleOutliningExpansion<CR>

